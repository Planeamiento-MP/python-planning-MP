# Tareas programadas: cron:nombre separadas por ;
# Format: "0 9 * * *:analisis_email;0 14 * * *:reporte_resumen"
# Tareas: analisis_email, reporte_resumen, solo_analisis, origen_inventario
# Ejemplo diario Origen de Inventario (guarda en BD): 0 6 * * *:origen_inventario
SCHEDULES="0 9 * * *:analisis_email"

# Modo: "scheduler" (programa interno 24/7) o "once" (ejecuta y sale)
RUN_MODE=scheduler

# Ejecutar inmediatamente al iniciar (para pruebas sin esperar la hora programada)
RUN_ON_STARTUP=false

# Zona horaria (ambas deben coincidir)
TIMEZONE=America/Mexico_City
TZ=America/Mexico_City

# Configuración SMTP
# IMPORTANTE: en Docker, $ en la contraseña se interpreta. Usa $$ por cada $ (ej: $$f por $f)
# Para Office 365 con error de auth, prueba: SMTP_TLS_CIPHERS="DEFAULT:@SECLEVEL=1"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password
SMTP_FROM=tu_email@gmail.com
SMTP_TO=destinatario1@ejemplo.com,destinatario2@ejemplo.com

# SAP HANA (túnel SSH: usar HANA_HOST=host.docker.internal en Docker; en local 127.0.0.1)
HANA_HOST=127.0.0.1
HANA_PORT=30015

# PostgreSQL (en Docker el host es "postgres", en local "localhost")
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobs_db
DB_USER=jobs
DB_PASSWORD=jobs_secret
