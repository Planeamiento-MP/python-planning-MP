# Tareas: "cron:nombre" separadas por ;  Ej: "0 9 * * *:analisis_email;0 14 * * *:reporte_resumen"
#SCHEDULES=" 0 9 * * *:pruebas_web_scraping; 0 9 * * *:pruebas_envio_correo"
SCHEDULES="0 9 * * *:pruebas_envio_correo"
# Modo: "scheduler" (programa interno 24/7) o "once" (ejecuta y sale)
RUN_MODE=scheduler

# true = ejecuta inmediatamente al iniciar (para probar sin esperar las 11 AM)
RUN_ON_STARTUP=true

# Zona horaria (TIMEZONE=app, TZ=contenedor Linux)
TIMEZONE=America/Lima
TZ=America/Lima

# Configuración SMTP
# Ciphers mas permisivos para Office 365 (equivalente a tls.ciphers en Nodemailer)
SMTP_TLS_CIPHERS="DEFAULT:@SECLEVEL=1"
SMTP_HOST="smtp.office365.com"
SMTP_PORT=587
SMTP_USER="notificacion_documentacion@marco.com.pe"
# El $ en .env se interpreta como variable. Usar $$ para $ literal
SMTP_PASSWORD="g&h7D#fgFD"
SMTP_FROM="notificacion_documentacion@marco.com.pe"
SMTP_TO="mperalta@marco.com.pe"
# Descomentar para verificar que la contraseña llegue bien al contenedor
